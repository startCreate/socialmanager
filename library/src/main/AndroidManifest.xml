<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.applikeysolutions.library" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application>

        <meta-data
            android:name="@string/vv_com.applikeysolutions.socialmanager.facebookAppId"
            android:value="\ ${facebookAppId}" />

        <meta-data
            android:name="@string/vv_com.applikeysolutions.library.googleWebClientId"
            android:value="\ ${googleWebClientId}"  />

        <meta-data
            android:name="@string/vv_com.applikeysolutions.library.twitterConsumerKey"
            android:value="\ ${twitterConsumerKey}" />

        <meta-data
            android:name="@string/vv_com.applikeysolutions.library.twitterConsumerSecret"
            android:value="\ ${twitterConsumerSecret}" />

        <meta-data
            android:name="@string/vv_com.applikeysolutions.library.instagramClientId"
            android:value="\ ${instagramClientId}" />

        <meta-data
            android:name="@string/vv_com.applikeysolutions.library.instagramClientSecret"
            android:value="\ ${instagramClientSecret}" />

        <meta-data
            android:name="@string/vv_com.applikeysolutions.library.instagramRedirectUri"
            android:value="\ ${instagramRedirectUri}" />

        <activity
            android:name=".FacebookAuthActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.AppCompat.Dialog" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation" />

        <activity
            android:name=".GoogleAuthActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.AppCompat.Dialog" />

         <activity
             android:name=".TwitterAuthActivity"
             android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
             android:excludeFromRecents="true"
             android:launchMode="singleTask"
             android:theme="@style/Theme.AppCompat.Dialog" />

         <activity
             android:name=".InstagramAuthActivity"
             android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
             android:excludeFromRecents="true"
             android:launchMode="singleTask" />

       <!-- <provider
            android:authorities="${applicationId}.SimpleAuthInitProvider"
            android:name=".SimpleAuthInitProvider"
            android:exported="false" />-->

    </application>

</manifest>
